<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <EditText
        android:id="@+id/main_input_edit"
        android:layout_width="fill_parent"
        android:layout_height="94px"
        android:textSize="72px"
        android:background="@drawable/top_bg"
        android:textColor="#FFFFFF"
		android:gravity="center_horizontal"
        android:singleLine="true"/>

    <ListView
        android:id="@+id/main_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_input_edit" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <!-- 键盘区 -->

        <LinearLayout
            android:id="@+id/main_softkey_layout"
            android:layout_width="fill_parent"
            android:layout_height="481px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/main_one_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_one_btn_bg" 
                    />

                <Button
                    android:id="@+id/main_two_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_two_btn_bg" />

                <Button
                    android:id="@+id/main_three_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_three_btn_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/main_four_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_four_btn_bg" />

                <Button
                    android:id="@+id/main_five_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_five_btn_bg" />

                <Button
                    android:id="@+id/main_six_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_six_btn_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/main_seven_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_seven_btn_bg" />

                <Button
                    android:id="@+id/main_eigter_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_eight_btn_bg" />

                <Button
                    android:id="@+id/main_nine_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_nine_btn_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/main_xing_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/xing_btn_bg" />

                <Button
                    android:id="@+id/main_zero_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/num_zero_btn_bg" />

                <Button
                    android:id="@+id/main_jing_btn"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/jing_btn_bg" />
            </LinearLayout>
        </LinearLayout>
        <!-- 底部栏区 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="162px"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/main_update_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/update_btn_bg" />

            <Button
                android:id="@+id/main_call_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/call_btn_bg" />

            <Button
                android:id="@+id/main_delete_btn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/delete_btn_bg" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>